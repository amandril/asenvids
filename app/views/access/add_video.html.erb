<% @page_title = "Admin Menu | Add Video" %>

<div class="menu">

<div id="notice-box">
    <% if @video.errors.any? %>
      <div class="notice">
		<%= pluralize(@video.errors.count, "error") %> prohibited this post from being saved:</h4>
        <ul>
        <% @video.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
</div>



	<%= form_for :video, url: { action: 'create_video' } do |f| %>
	<table>
		<tr>
			<td><%= label_tag(:title, "Title: ") %></td>
			<td><%= f.text_field :title %></td>
		</tr>
		<tr>
			<td><%= label_tag(:video_url, "URL: ") %></td>
			<td><%= f.text_field :video_url %></td>
		</tr>
		<tr>
			<td><%= label_tag(:description, "Description: ") %></td>
			<td><%= f.text_area :description %></td>
		</tr>
		<tr>
			<td><%= f.submit "Create" %></td>
		</tr>
	</table>
	<% end %>

	<br><br>

	<%= link_to("Back to Content", :controller => 'public', :action => 'index') %>

</div>